<VirtualHost *:80>
    DocumentRoot {{ vhost_document_root }}
    ServerName {{ ansible_hostname }}.local

    <directory />
        Options All
        AllowOverride all
        Order allow,deny
        Allow from all
    </directory>

    ErrorLog /var/log/apache2/error.log
    TransferLog /var/log/apache2/access.log
</VirtualHost>
